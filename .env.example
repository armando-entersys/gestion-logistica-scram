# ============================================
# SCRAM - Variables de Entorno
# ============================================
# IMPORTANTE: Copiar este archivo a .env y configurar los valores reales
# NUNCA commitear el archivo .env al repositorio

# Database
DB_USER=scram_user
DB_PASSWORD=your_secure_password_here
DB_NAME=scram_db

# JWT
JWT_SECRET=your_jwt_secret_min_32_chars_here
JWT_EXPIRATION=1d

# Bind ERP Integration
BIND_API_URL=https://api.bind.com.mx
BIND_API_KEY=your_bind_api_key

# Google Maps Platform
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# SendGrid (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=notificaciones@tuempresa.com

# Application URLs
APP_URL=https://scram.entersys.mx
API_URL=https://api-scram.entersys.mx

# Google Cloud Storage (Evidence Images)
GCS_PROJECT_ID=mi-infraestructura-web
GCS_BUCKET_NAME=scram-evidence
GCS_KEY_FILE=/app/gcs-key.json

# Configuraci√≥n de Negocio
PRIORITY_THRESHOLD_AMOUNT=50000
DEFAULT_ROUTE_START_TIME=09:00
AVERAGE_STOP_TIME_MINUTES=30
TRAFFIC_BUFFER_PERCENT=15
MAX_ORDERS_PER_DRIVER=15
